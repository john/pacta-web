- @mode = "light"
- @company = user_signed_in? ? "PACTA for #{current_user.organization.name}" : "PACTA"
- @color = @color.present? ? @color : "bg-secondary"

!!!
%html{lang: "en", "data-bs-theme": "#{@mode}"}
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv": "Content-Type"}/
    %meta{content: "width=device-width,initial-scale=1", name: "viewport"}/
    %title
      - if @title
        #{@title}
        |
      Pacta

    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag "application", "data-turbo-track": "reload"

    :css
      .form-group {margin-bottom: 20px;}

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js" integrity="sha512-STof4xm1wgkfm7heWqFJVn58Hm3EtS31XFaagaa8VMReCXAkQnJZ+jEy8PCC/iT18dFy95WcExNHFTqLyp72eQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

  %body

    %nav{class: "navbar navbar-expand-md navbar-dark #{@color}"}
      .container-fluid


        = link_to "#{@company}", root_path, class: "navbar-brand", style: "margin-left: 25px;"

        %button.navbar-toggler{type: "button", "data-bs-toggle": "collapse", "data-bs-target": "#navbarSupportedContent", style: "margin-right: 20px;", "aria-controls": "navbarSupportedContent", "aria-expanded": "false", "aria-label": "Toggle navigation"}
          %span.navbar-toggler-icon

        .collapse.navbar-collapse#navbarSupportedContent
          %ul.navbar-nav.me-auto
            %li.nav-item
              = link_to "Portfolios", portfolios_path, class: "nav-link"

          %ul.navbar-nav.ms-auto{style: "margin-right: 20px;"}
            - if user_signed_in?
              %li.nav-item.dropdown
                = link_to "Hi #{current_user.name}!", '#', class: "nav-link dropdown-toggle", role: "button", "data-bs-toggle": "dropdown", "aria-expanded": "false"
                %ul.dropdown-menu
                  %li
                    =link_to "Profile", current_user, class: "dropdown-item"
                  - if current_user.admin?
                    %li
                      = link_to "Admin", "/admin", class: "dropdown-item"

              %li.nav-item
                = link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-item nav-link'

            - else
              %li{class: "nav-item"}
                = link_to 'Sign In', new_user_session_path, class: 'nav-link'

    %main{role: "main", class: "container", style: "margin-top: 25px;"}

      - flash.each do |type, msg|
        %div{class: "#{flash_class(type)} alert-dismissible fade show", role: "alert"}
          = msg
          %button.btn-close{type: "button", "data-bs-dismiss": "alert", "aria-label": "Close"}

      = yield

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
